{
  "info": {
    "name": "Smart Cafeteria API",
    "description": "Core local API checks for auth, menu, order, health, and payment service.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Identity Health",
          "request": {
            "method": "GET",
            "url": "{{identity_url}}/health"
          }
        },
        {
          "name": "Order Gateway Health",
          "request": {
            "method": "GET",
            "url": "{{gateway_url}}/health"
          }
        },
        {
          "name": "Stock Health",
          "request": {
            "method": "GET",
            "url": "{{stock_url}}/health"
          }
        },
        {
          "name": "Kitchen Queue Health",
          "request": {
            "method": "GET",
            "url": "{{kitchen_url}}/health"
          }
        },
        {
          "name": "Notification Health",
          "request": {
            "method": "GET",
            "url": "{{notification_url}}/health"
          }
        },
        {
          "name": "Payment Health",
          "request": {
            "method": "GET",
            "url": "{{payment_url}}/health"
          }
        }
      ]
    },
    {
      "name": "Core API",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"student_id\": \"2100001\",\n  \"password\": \"demo-pass\"\n}"
            },
            "url": "{{gateway_url}}{{api_prefix}}/login"
          }
        },
        {
          "name": "Get Menu",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": "{{gateway_url}}{{api_prefix}}/menu"
          }
        },
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    { \"id\": \"1\", \"qty\": 1 },\n    { \"id\": \"4\", \"qty\": 2 }\n  ]\n}"
            },
            "url": "{{gateway_url}}{{api_prefix}}/orders"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "gateway_url",
      "value": "http://localhost:8002"
    },
    {
      "key": "identity_url",
      "value": "http://localhost:8001"
    },
    {
      "key": "stock_url",
      "value": "http://localhost:8003"
    },
    {
      "key": "kitchen_url",
      "value": "http://localhost:8004"
    },
    {
      "key": "notification_url",
      "value": "http://localhost:8005"
    },
    {
      "key": "payment_url",
      "value": "http://localhost:8006"
    },
    {
      "key": "api_prefix",
      "value": "/api"
    },
    {
      "key": "access_token",
      "value": "mock-token"
    }
  ]
}
